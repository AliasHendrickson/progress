  %h5.collection-header Weekly Goals:
  -if @weekly_goal
    .collection-item
      %a.open-modal-link{:href => "#goal-show-modal-weekly"}= @weekly_goal.description
      #goal-show-modal-weekly.modal
        .modal-content
          %span.close-modal-btn X
          =render "goals/show", :goal => @weekly_goal

