= form_for @goal do |f|
  -if @goal.errors.any?
    #errors
      %ul
        - @goal.errors.full_messages.each do |msg|
          %li= msg

  = f.label :description
  = f.text_field :description

  = f.label :duration
  = f.select "duration", [['Day', :day], ['2', 2], ['3', 3]]

  = f.label :due_date
  = f.datetime_field :due_date

  = f.submit
