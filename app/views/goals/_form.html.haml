= form_for @goal do |f|
  -if @goal.errors.any?
    #errors
      %ul
        - @goal.errors.full_messages.each do |msg|
          %li= msg

  = f.label "Write a goal here:"
  = f.text_field :description

  = f.label "Pick if this goal is a day, week, or phase goal:"
  = f.select "duration", [['Day', 'Day'], ['Week', 'Week'], ['Phase', 'Phase']]

  = f.label "Enter in a due date:"
  = f.datetime_select :due_date, :ampm => true

  = f.submit "Dream Forward"
